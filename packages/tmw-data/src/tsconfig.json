{
  "esModuleInterop": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist/cjs",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist", "docs", "test"]
}
