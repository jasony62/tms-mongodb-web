{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "sourceMap": false,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.d.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
